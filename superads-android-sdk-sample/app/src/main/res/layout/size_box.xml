<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  >

  <TextView
    android:id="@+id/width_text"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:text="Width:"
    android:textSize="20dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

  <EditText
    android:id="@+id/width_edit"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:text="320"
    android:inputType="number"
    android:maxLength="5"
    app:layout_constraintLeft_toRightOf="@id/width_text"
    app:layout_constraintTop_toTopOf="@id/width_text"
    app:layout_constraintBottom_toBottomOf="@id/width_text"
    />

  <TextView
    android:id="@+id/height_text"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="Height:"
    android:textSize="20dp"
    app:layout_constraintLeft_toLeftOf="@id/width_text"
    app:layout_constraintTop_toBottomOf="@id/width_text"
    />

  <EditText
    android:id="@+id/height_edit"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:text="50"
    android:inputType="number"
    android:maxLength="5"
    app:layout_constraintLeft_toRightOf="@id/height_text"
    app:layout_constraintTop_toTopOf="@id/height_text"
    app:layout_constraintBottom_toBottomOf="@id/height_text"
    />

  <TextView
    android:id="@+id/country_text"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="Country:"
    android:textSize="20dp"
    app:layout_constraintLeft_toLeftOf="@id/height_text"
    app:layout_constraintTop_toBottomOf="@id/height_text"
    />

  <EditText
    android:id="@+id/country_edit"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:text="KR"
    android:maxLength="2"
    app:layout_constraintLeft_toRightOf="@id/country_text"
    app:layout_constraintTop_toTopOf="@id/country_text"
    app:layout_constraintBottom_toBottomOf="@id/country_text"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
