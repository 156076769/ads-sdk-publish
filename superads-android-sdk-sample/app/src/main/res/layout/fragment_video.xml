<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:clickable="true"
  >

  <TextView
    android:id="@+id/video_rewarded_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:layout_marginLeft="25dp"
    android:text="Rewarded Video ?"
    android:textSize="20dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    />

  <Switch
    android:id="@+id/video_rewarded_switch"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="25dp"
    app:layout_constraintTop_toTopOf="@id/video_rewarded_text"
    app:layout_constraintBottom_toBottomOf="@id/video_rewarded_text"
    app:layout_constraintRight_toRightOf="parent"
    />

  <Button
    android:id="@+id/video_btn_load"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@drawable/button_background"
    android:text="Load"
    android:textColor="@color/white"
    app:layout_constraintHorizontal_chainStyle="spread"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@id/video_btn_show"
    app:layout_constraintTop_toBottomOf="@id/video_rewarded_text"
    />

  <Button
    android:id="@+id/video_btn_show"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/button_background"
    android:text="Show"
    android:textColor="@color/white"
    android:enabled="false"
    app:layout_constraintLeft_toRightOf="@id/video_btn_load"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@id/video_btn_load"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
